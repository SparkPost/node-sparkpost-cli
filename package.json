{
  "name": "sparkpost-cli",
  "version": "0.1.0",
  "description": "A command-line interface to SparkPost.",
  "keywords": [
    "email",
    "messaging",
    "sparkpost",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/SparkPost/node-sparkpost-cli"
  },
  "author": "SparkPost",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/SparkPost/node-sparkpost-cli/issues"
  },
  "homepage": "https://github.com/SparkPost/node-sparkpost-cli",
  "engines": {
    "node": ">=4.0.0"
  },
  "scripts": {
    "lint": "eslint \"**/*.js\" --ignore-path .gitignore --fix"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "configstore": "^2.1.0",
    "lodash": "^4.17.2",
    "open": "0.0.5",
    "pluralize": "^3.1.0",
    "prettyjson": "^1.2.1",
    "sparkpost": "^2.1.2",
    "yargs": "^6.6.0"
  },
  "devDependencies": {
    "eslint": "^3.15.0",
    "eslint-config-sparkpost": "^1.3.2"
  },
  "bin": {
    "sparkpost": "./cli.js"
  },
  "yargs": {
    "parse-numbers": false
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": [ "error", { "args": "none" } ]
    },
    "extends": [ "sparkpost" ]
  }
}
